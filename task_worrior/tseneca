#!/bin/bash
task calendar

YEAR=$(date +%Y)
MONTH=$(date +%m)

if [[ -z $1 ]]; then
   read -p "task name: " NAME
else
   NAME="$@"
fi

read -p "due date: $YEAR-$MONTH-" DATE

CLASS=$(echo -e "C#\nBCI\nJAC\nPRJ\n" | fzf)

task add "${NAME}" project:$CLASS\
   due:$YEAR-$MONTH-$DATE \
   +seneca

task
# ultralist list
