#!/bin/bash
task calendar

YEAR=$(date +%Y)
MONTH=$(date +%m)

if [[ -z $1 ]]; then
   read -p "task name: " NAME
else
   NAME="$@"
fi

read -p "due date: $YEAR-$MONTH-" DATE
select CLASS in C# BCI JAC PRJ666
do
   task add "${NAME}" project:$CLASS\
      due:$YEAR-$MONTH-$DATE \
      +seneca
   task  # then display all tasks
   exit
done
